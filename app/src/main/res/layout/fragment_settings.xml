<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ronyalvarez.eventage.SettingsActivityFragment"
    tools:showIn="@layout/activity_settings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_phone"
        android:id="@+id/chkPhone"
        android:layout_marginTop="70dp"
        android:textSize="@dimen/normal"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_SMS"
        android:id="@+id/chkSMS"
        android:layout_below="@+id/chkPhone"
        android:layout_alignLeft="@+id/chkPhone"
        android:layout_marginTop="67dp"
        android:textSize="@dimen/normal"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_GPS"
        android:id="@+id/chkGPS"
        android:layout_below="@+id/chkSMS"
        android:layout_alignLeft="@+id/chkSMS"
        android:layout_alignEnd="@+id/chkSMS"
        android:layout_marginTop="64dp"
        android:textSize="@dimen/normal"
        android:checked="true" />

</RelativeLayout>
